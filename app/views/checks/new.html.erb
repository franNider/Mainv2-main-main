<h1>Cargar chequeos</h1>
<%= form_with(model: @check) do |form| %>
    <div class="alert alert.prymary">
 <% @check.errors.full_messages.each do |error| %>
    <li>
      <%= error %>
    </li>
  <% end %>
</div>
    <div>
        <%= form.label :perro %>
        <%= form.text_field :perro %>
    </div>
    
    <div>
        <%= form.label :descripcion %>
        <%= form.text_field :descripcion %>
    </div>

    <div>
        <%= form.label :dia %>
        <%= form.number_field :dia %>
    </div>

    <div>
        <%= form.label :mes %>
        <%= form.number_field :mes %>
    </div>

    <div>
        <%= form.label :año %>
        <%= form.number_field :año %>
    </div>


  <div>
    <%= form.submit "Cargar chequeo", class: "btn btn-info" %>
  </div>
<% end %>