<h1>Editar Perfil</h1>
<%= form_with(model: @profile) do |form| %>
    <div class="form-row">
    <div class="form-group col-md-2">
      <%= form.label :nombre %>
      <%= form.text_field :nombre, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :apellido %>
      <%= form.text_field :apellido, class: "form-control" %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :dni %>
      <%= form.number_field :dni, class: "form-control" %>
    </div>
  </div>

<% end %>